                        {#                            This week#}
                        {#                        </button>#}
                    </div>
                </div>

                <main class="container" role="main">

                        <div class="row">
                            <div class="col-md-10 ml-md-auto">
                                <div class="card bg-light mb-3 mt-5" style="width: 900px">
                                    <div class="card-body">
                                        <div class="card-header mb-3">Создание пользователя</div>
                                        {{ form_start(form) }}

                                        {#                        <div class="form_group">#}
                                        {#                            <div class="col-md-12 mb-3">#}
                                        {#                                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}#}
                                        {#                            </div>#}
                                        {#                        </div>#}
                                        <div class="form_group">
                                            <div class="col-md-12 mb-3">
                                                {{ form_row(form.login, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="form_group">
                                            <div class="col-md-12 mb-3">
                                                {{ form_row(form.password.first, {'attr': {'class':
                                                    'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="form_group">
                                            <div class="col-md-12 mb-3">
                                                {{ form_row(form.password.second, {'attr': {'class':
                                                    'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fa fa-btn fa-user"></i> Создать
                                                </button>
                                            </div>
                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
